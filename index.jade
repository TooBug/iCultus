      }
      body{
        padding-top: 5%;
      }
      h1{
        font-weight: 200;
        margin: 0;
      }
      h2{
        font-weight: 100;
      }
      .center{
        text-align: center;
      }

      .logo{
        max-width: 64px;
      }

      .btn{
        text-decoration: none;
        font-size: .8em;
        color: #7BBFE0;
        font-weight: bold;
        border: 1px solid #7BBFE0;
        padding: .8em;
        border-radius: 3px;
        transition: all .2s;
        -webkit-transition: all .2s;
        display: inline-block;
      }

      .screenshot{
        max-width: 220px;
        margin-bottom: 2em;
        border-radius: 2px;
        -webkit-box-shadow: 0 1px 2px #000;
        -moz-box-shadow: 0 1px 2px #000;
        box-shadow: 0 1px 2px #000;
      }

      .btn:hover{
        background-color: #7BBFE0;
        color: #fff;
      }

      .small{
        font-size: .8em;
        font-weight: lighter;
      }

      a{
        text-decoration: none;
        color: #7BBFE0;
      }
